            <h2>seit 1900</h2>
            <img class="decoration-r" src="/img/icons/icon_var2.svg" alt="">
        </div>
        <div class="main-title">
            <h1>Kontakt</h1>
        </div>
        <div class="lower-title">
            <hr>
            <h2>zum Schillergymnasium</h2>
            <hr>
        </div>

        <img class="background" src="/img/banners/main.png" alt="">
    </div>

    <div class="lower-hero">
        <ul>
            <li><a href="">Termine</a></li>
            {% if settings.anmeldephase %}
                <li class="anmeldung"><a href="">Anmeldung Schuljahr 2024/25</a></li>
            {% endif %}
            <li><a href="">Kontakt</a></li>
        </ul>

        <div class="buttons">
            <a href=""><i class='bx bx-calendar' ></i></a>
            {% if settings.anmeldephase %}
                <a href=""><i class='bx bx-check-square'></i></a>
            {% endif %}
            <a href=""><i class='bx bx-phone-call' ></i></a>
        </div>
    </div>
</section>

<section class="contents">
    <div class="content">
        <center><div class="title">
            <h4>Contact</h4>
            <h2>Noch fragen?</h2>
        </div></center>

        <div class="contact">
            <div class="contact-info">
                <div class="adresse">
                    <p><b>Adresse</b></p>
                    <p>Gertrudenstr. 5</p>
                    <p>48147 MÃ¼nster</p>
                </div>

                <div class="phone">
                    <p><b>Telefon</b></p>
                    <a href="tel:0251 / 6866 180"><p>{{ settings.contact.phone }}</p></a>
                </div>

                <div class="fax">
                    <p><b>Telefax</b></p>
                    <a href="fax:0251.6866.1849"><p>{{ settings.contact.fax }}</p></a>
                </div>

                <div class="email">
                    <p><b>E-Mail</b></p>
                    <a href="mailto:schillergymnasium@stadt-muenster.de"><p>{{ settings.contact.email }}</p></a>
                </div>
            </div>

            <div class="contact-form">
                <form action="">
                    <div class="vorname-nachname input-holder">
                        <input type="text" name="vorname" id="vorname" placeholder="Vorname">
                        <input type="text" name="nachname" id="nachname" placeholder="Nachname">
                    </div>
                    <div class="email-betreff input-holder">
                        <input type="email" name="email" id="email" placeholder="E-Mail Adresse">
                        <input type="text" name="betreff" id="betreff" placeholder="Betreff">
                    </div>
                    <textarea name="msg" id="msg" placeholder="Nachricht"></textarea>
                    <center><button type="submit">Abschicken</button></center>
                </form>
            </div>
        </div>
    </div>
</section>