---
title: Aktuelles
layout: base.njk
---

<section class="hero-section">
    <div class="hero-center">
        <div class="upper-title">
            <img class="decoration-l" src="/img/icons/icon_var2.svg" alt="">
            <h2>seit 1900</h2>
            <img class="decoration-r" src="/img/icons/icon_var2.svg" alt="">
        </div>
        <div class="main-title">
            <h1>Aktuelles</h1>
        </div>
        <div class="lower-title">
            <hr>
            <h2>am Schillergymnasium</h2>
            <hr>
        </div>

        <img class="background" src="/img/background-images/htrackt.png" alt="">
    </div>

    {% include 'lower-hero.njk' %}
</section>

<section class="aktuelles-page">
    <div class="posts">
        {%- for post in collections.post | reverse -%}
            <div class="snippet">
                <img src="{{ post.data.banner }}" alt="" class="snippet__image">
                <div class="snippet__content">
                    <a href="{{ post.url }}"><h2 class="snippet__title">{{ post.data.title }}</h2></a>
                    <p class="snippet__info">{{ post.data.date | postDate }} &#8226; {{ post.data.author }}</p>
                    <p class="snippet__description">{{ post.data.description }}</p>
                </div>
            </div>
        {%- endfor -%}
    </div> 
    
    <div class="archive">
        <button>2023</button>
        <button>2022</button>
        <button>2021</button>
        <button>2020</button>
    </div>
</section>