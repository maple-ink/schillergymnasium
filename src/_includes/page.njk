---
layout: base.njk
---

<section class="hero-section">
    <div class="hero-center">
        <div class="upper-title">
            <img class="decoration-l" src="/img/icons/icon_var2.svg" alt="">
            <h2>Kategorie</h2>
            <img class="decoration-r" src="/img/icons/icon_var2.svg" alt="">
        </div>
        <div class="main-title">
            <h1>{{ shortTitle }}</h1>
        </div>
        <div class="lower-title">
            <hr>
            <h2>am Schillergymnasium</h2>
            <hr>
        </div>

        <img class="background" src="{{ banner }}" alt=""> 
    </div>

    <div class="lower-hero">
        <ul>
            <li><a href="">Termine</a></li>
            {% if settings.anmeldephase %}
                <li class="anmeldung"><a href="">Anmeldung Schuljahr 2024/25</a></li>
            {% endif %}
            <li><a href="">Kontakt</a></li>
        </ul>

        <div class="buttons">
            <a href=""><i class='bx bx-calendar' ></i></a>
            {% if settings.anmeldephase %}
                <a href=""><i class='bx bx-check-square'></i></a>
            {% endif %}
            <a href=""><i class='bx bx-phone-call' ></i></a>
        </div>
    </div>
</section>

<section class="contents">
    <div class="content">
        {% for page in collections.page %}
            {% if page.data.title == title %}
                {% for contentBlock in page.data.contentBlocks %}
                    {% if contentBlock.type == 'textBlock' %}
                        <p>{{ contentBlock.text }}</p>
                    {% elif contentBlock.type == 'galleryBlock' %}
                        <div class="gallary">
                            {% for image in contentBlock.gallery %}
                                <img src="{{ image.image }}" alt="">
                            {% endfor %}
                        </div>
                    {% elif contentBlock.type == 'videoBlock' %}
                        {% if contentBlock.video.platform == 'YouTube' %}
                            <center><iframe class="video" src="{{ contentBlock.video.link }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe></center>
                        {% endif %}
                    {% elif contentBlock.type == 'title' %}
                        <h2>{{ contentBlock.titleElement }}</h2>
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endfor %}
    </div>
</section>